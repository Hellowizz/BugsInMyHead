<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hellowizz.bugs.Exercice_2"
    android:background="#082943"
    android:screenOrientation="portrait"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="179dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bulleDialogue"
                android:layout_width="175dp"
                android:layout_height="490dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/dialogue_xml"/>

            <TextView
                android:id="@+id/textDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="10sp"
                android:text="@string/exercice_2dialog"
                android:textColor="#082943"
                android:textSize="14sp"
                android:typeface="normal" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageChris"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/chibi_1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="200dp">
        <TextView
            android:id="@+id/textAlgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/exercice2_algo"
            android:textSize="14sp"
            android:typeface="normal"
            android:textColor="#DA8698"/>

        <ImageView
            android:id="@+id/image_soluce1"
            android:layout_marginTop="20dp"
            android:layout_width="130dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/exo2_soluce1"/>

        <ImageView
            android:id="@+id/image_soluce2"
            android:layout_width="130dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/exo2_soluce2"/>

        <ImageView
            android:id="@+id/image_soluce3"
            android:layout_width="130dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/exo2_soluce3"/>

        <ImageView
            android:id="@+id/image_help"
            android:layout_width="130dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/exo2_help"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
