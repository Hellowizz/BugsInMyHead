<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hellowizz.bugs.Exercice_4"
    android:background="#082943"
    android:screenOrientation="portrait">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="179dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bulleDialogue"
                android:layout_width="175dp"
                android:layout_height="490dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/dialogue_xml"/>

            <TextView
                android:id="@+id/textDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="10sp"
                android:fontFamily="sans-serif"
                android:text="@string/exercice_4dialog"
                android:textColor="#082943"
                android:textSize="14sp"
                android:typeface="normal" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageChris"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/chibi_1" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="195dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textAlgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/exercice_4algo"
            android:textSize="12sp"
            android:typeface="normal"
            android:textColor="#DA8698"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="340dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_soluce1"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_width="70dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/exo4_sol1"/>

        <ImageView
            android:id="@+id/image_soluce2"
            android:layout_marginTop="20dp"
            android:layout_width="70dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/exo4_sol2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="410dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_soluce3"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_width="70dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/exo4_sol3"/>

        <ImageView
            android:id="@+id/image_soluce4"
            android:layout_marginTop="20dp"
            android:layout_width="70dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/exo4_sol4"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
