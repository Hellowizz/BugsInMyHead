<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hellowizz.bugs.Exercices"
    android:background="#082943"
    android:screenOrientation="portrait">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button_exercice1"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button"
                android:text="Level 1"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="231dp" />

            <Button
                android:id="@+id/button_exercice2"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button"
                android:text="Level 2"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="231dp" />

            <Button
                android:id="@+id/button_exercice3"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button"
                android:text="Level 3"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="231dp" />

            <Button
                android:id="@+id/button_exercice4"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button"
                android:text="Level 4"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="231dp" />

            <Button
                android:id="@+id/button_newGame"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/underbuttonpink"
                android:text="New Game"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="231dp" />

        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
